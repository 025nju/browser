<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="horizontal"
        android:id="@+id/menu_share_link_copy_Layout"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_share_link_copy"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/menu_share_link_copy"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="horizontal"
        android:id="@+id/menu_share_link_Layout"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_share_link"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/menu_share_link"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="horizontal"
        android:id="@+id/menu_save_readLater_Layout"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_save_readLater"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/menu_save_readLater"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="horizontal"
        android:id="@+id/context_1_Layout"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:src="@drawable/circle_1"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/context_1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/context_1"
            android:ellipsize="end"
            android:lines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="horizontal"
        android:id="@+id/context_2_Layout"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:src="@drawable/circle_2"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/context_2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/context_2"
            android:ellipsize="end"
            android:lines="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="horizontal"
        android:id="@+id/context_3_Layout"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:src="@drawable/circle_3"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/context_3"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/context_3"
            android:ellipsize="end"
            android:lines="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin"
        android:orientation="horizontal"
        android:id="@+id/context_4_Layout"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:src="@drawable/circle_4"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/context_4"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/context_4"
            android:ellipsize="end"
            android:lines="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginStart="@dimen/activity_margin"
        android:layout_marginEnd="@dimen/activity_margin"
        android:orientation="horizontal"
        android:id="@+id/context_5_Layout"
        android:gravity="center_vertical"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin"
            android:src="@drawable/circle_5"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/context_5"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/context_5"
            android:ellipsize="end"
            android:lines="1"/>

    </LinearLayout>

</LinearLayout>